<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Website</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/index.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            background: linear-gradient(135deg, #343a40, #212529);
            padding: 12px 20px;
            border-radius: 0 0 15px 15px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: bold;
            color: #ffc107 !important;
        }

        .nav-link {
            font-size: 1rem;
            font-weight: 600;
            transition: all 0.3s ease-in-out;
            color: white !important;
        }

        .nav-link:hover, .nav-link.active {
            color: #ffc107 !important;
            transform: scale(1.1);
        }

        .btn-search {
            border-radius: 5px;
            transition: background 0.3s, transform 0.2s;
        }

        .btn-search:hover {
            background-color: #ffc107 !important;
            color: black !important;
            transform: scale(1.05);
        }

        .container {
            margin-top: 50px;
            text-align: center;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #343a40;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">My Website</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" href="#" onclick="changeContent('Home', this)">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="changeContent('Contacts', this)">Contacts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="changeContent('About', this)">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="changeContent('Profile', this)">Profile</a>
                    </li>
                </ul>
                <form class="d-flex" role="search" onsubmit="return searchFunction()">
                    <input id="searchInput" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-light btn-search" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Nội dung chính -->
    <div class="container">
        <h1 id="content">Welcome to Home Page</h1>
    </div>

    <script>
        function changeContent(pageName, element) {
            document.getElementById("content").innerText = "Page " + pageName;
            
            document.querySelectorAll(".nav-link").forEach(link => {
                link.classList.remove("active");
            });
            element.classList.add("active");
        }

        function searchFunction() {
            let searchText = document.getElementById("searchInput").value;
            if (searchText.trim() === "") {
                alert("Please enter a search term!");
                return false;
            }
            document.getElementById("content").innerText = "Search results for: " + searchText;
            return false;
        }
    </script>
</body>
</html>

