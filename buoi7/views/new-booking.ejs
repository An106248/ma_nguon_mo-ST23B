<!DOCTYPE html>
<html>
<head>
    <title>Đặt chỗ mới</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Đặt chỗ mới</h1>
        
        <% if (locals.error) { %>
            <div class="alert error"><%= error %></div>
        <% } %>
        
        <form action="/booking/create" method="POST">
            <div class="form-group">
                <label>Tên khách hàng:</label>
                <input type="text" name="customerName" required 
                       value="<%= locals.formData ? formData.customerName : '' %>">
            </div>
            
            <div class="form-group">
                <label>Ngày:</label>
                <input type="date" name="date" required
                       value="<%= locals.formData ? formData.date : '' %>">
            </div>
            
            <div class="form-group">
                <label>Giờ:</label>
                <input type="time" name="time" required
                       value="<%= locals.formData ? formData.time : '' %>">
            </div>
            
            <div class="button-group">
                <button type="submit" class="btn">
                    <i class="fas fa-plus"></i> Đặt chỗ
                </button>
                <a href="/" class="btn secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</body>
</html>
